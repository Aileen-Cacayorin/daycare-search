<button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
  Edit {{daycare.name}}
</button>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Daycare</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="name"> Name</label>
            {{input class="form-control" id='name' value= daycare.name}}
          </div>
          <div class="form-group">
            <label for="address"> Address</label>
            {{input class="form-control" id='address' value= daycare.address}}
          </div>
          <div class="form-group">
            <label for="email"> Email</label>
            {{input class="form-control" id='email' value= daycare.email}}
          </div>
          <div class="form-group">
            <label for="phone"> Phone</label>
            {{input class="form-control" id='phone' value= daycare.phone}}
          </div>
          <div class="form-group">
            <label for="phone"> Website:</label>
            {{input id='website' value= daycare.website}}
          </div>
          <div class="form-group">
            <label for="waitlist"> Waitlist</label>
            {{input class="form-control" id='waitlist' value= daycare.waitlist}}
          </div>
          <div class="form-group">
            <label for="ratio"> Caregiver-to-Child Ratio</label>
            {{input class="form-control" id='ratio' value= daycare.ratio}}
          </div>
          <div class="form-group">
            <label for="certifications">Certifications:</label>
            {{textarea  value=daycare.certifications id='certifications'}}
          </div>
          <div class="form-group">
            <label for="hours">Hours</label>
            {{input class="form-control" id='hours' value= daycare.hours}}
          </div>
          <div class="form-group">

            <label for="mission">Mission:</label>
            {{textarea  value=daycare.mission id='mission'}}
          </div>
          <div class="form-group">
            <label for="description">Description:</label>
            {{textarea value=daycare.description id='description'}}

            <label for="mission">Mission</label>
            {{textarea class="form-control"id='mission' value= daycare.mission}}
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            {{textarea class="form-control" id='description' value= daycare.description}}
          </div>
          <div class="form-group">
            <label for="image2">Image 1</label>
            {{input class="form-control" id='image1' value= daycare.image1}}
          </div>
          <div class="form-group">
            <label for="image2">Image 2</label>
            {{input class="form-control" id='image2' value= daycare.image2}}
          </div>
          <div class="form-group">
            <label for="image3">Image 3</label>
            {{input class="form-control" id='image3' value= daycare.image3}}
          </div>
          <div class="form-group">
            <label for="image4">Image 4</label>
            {{input class="form-control" id='image4' value= daycare.image4}}
          </div>
          <div class="form-group">
            <label for="image5">Image 5</label>
            {{input class="form-control" id='image5' value= daycare.image5}}
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" {{action 'saveChanges' daycare}} data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>
{{yield}}
