            <div class="form-group">
              {{input class="form-control" value=email id='email' placeholder='Email'}}
            </div>
            <div class="form-group">
              {{input class="form-control" value=phone id='phone' placeholder='Phone'}}
            </div>
            <div class="form-group">
              {{input class="form-control" value=website id='website' placeholder='Website'}}
            </div>
            <hr>
            <div align="left">
              <h4>Daycare Details</h4>
            </div>
            <hr>
            <div class="form-group">
              {{input class="form-control" value=waitlist id='waitlist' placeholder='Enter Approx Wait Time'}}
            </div>
            <div class="form-group">
              {{input class="form-control" value=ratio id='ratio' placeholder="Child:Caregiver"}}
            </div>
            <div class="form-group">
              {{textarea class="form-control" value=certifications id='certifications' placeholder='Certifications'}}
            </div>
            <div class="form-group">
              {{input class="form-control" value=hours id='hours' placeholder='Hours'}}
            </div>
