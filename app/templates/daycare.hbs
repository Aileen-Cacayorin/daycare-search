<center><h1>{{model.name}}</h1></center>

{{daycare-carousel daycare=model}}

        <center><h3><i>"{{model.mission}}"</i></h3></center>
<hr>

<aside class="call-to-action" id="bg-primary">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h4 id="daycaredescription">{{model.description}}</h4>
      </div>
    </div>
  </div>
</aside>

<hr>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="thumbnail">
        <img src="http://1.bp.blogspot.com/-fpY8MWeSTi8/VHoo4x-O--I/AAAAAAAABg0/Row8caIR15E/s1600/Library%2BVisit%2BCollage.jpg">
        <h4>About Us</h4>
        <p>
          DaycareShare is the trusted daycare center for the nation
        </p>
      </div>
    </div>
    <div class="col-md-4 hero-feature">
      <div class="thumbnail">
        <img src="http://www.ellwooddaycare-osc.ca/wp-content/uploads/2014/08/Daycare4.jpg">
        <h4>Contact Information:</h4>
        <li><i class="fa fa-home">: {{model.address}}</i></li>
        <li><i class="fa fa-envelope">: {{model.email}}</i></li>
        <li><i class="fa fa-phone">: {{model.phone}}</i></li>
        <li><i class="fa fa-calendar">: {{model.hours}}</i></li>
      </div>
    </div>
    <div class="col-md-4 hero-feature">
      <div class="thumbnail">
        <img src="http://www.kidzeewagholi.com/dots/images/daycare.jpg">
        <h4>Caregiver-to-Child Ratio:</h4>
        <p>{{model.ratio}}</p>
        <h4>Certifications</h4>
        <p>{{model.certifications}}</p>
      </div>
    </div>
  </div>
</div>

